            <?php echo $block->getChildHtml('header.nav.Dropdown.loggedout'); ?>
        <?php else: ?>
            <?php echo $block->getChildHtml('header.nav.Dropdown.loggedin'); ?>
        <?php endif; ?>
    </div>
</li>


<script>// <![CDATA[
    require([
        'jquery'
    ], function ($) {
        $(document).ready(function (e) {

            $('#customer-logIn-Dropdown').on('click', function (event) {
                $("#customer-Dropdown-menu").toggle();
            });

            $('body').on('click', function (e) {
                if (!$('.customer-welcome').is(e.target) && $('.customer-welcome').has(e.target).length === 0)
                {
                    $('#customer-Dropdown-menu').hide();
                }
            });
        });
    });
