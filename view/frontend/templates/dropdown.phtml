<li class="customer-welcome">
    <span class="customer-name Dropdown-toggle" id="customer-logIn-Dropdown"
          role="link"
          tabindex="0"
          data-trigger-keypress-button="true">
        <span>icon</span>
    </span>

    <div id="customer-Dropdown-menu" class="customer.menu Dropdown" data-target="Dropdown" style="display:none; z-index:10; position: absolute;">
